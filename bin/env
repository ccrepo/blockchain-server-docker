
# build
DOCKER_FILE=src/main/docker/Dockerfile
BUILD_DIR=build

# general
TAG_ORG=shlibnet
TAG_ID=bitcoin-server
TAG_VERSION=latest
TAG_PREFIX="$TAG_ORG/$TAG_ID"
TAG="$TAG_PREFIX:$TAG_VERSION"

# git user
SERVER_DOCKER_GITUSER=ccrepo

# http ports
HTTP_INTERNAL_PORT=8080
HTTP_EXTERNAL_PORT=${HTTP_INTERNAL_PORT}

# ssh ports
SSH_INTERNAL_PORT=22
SSH_EXTERNAL_PORT=${SSH_INTERNAL_PORT}${SSH_INTERNAL_PORT}

# bitcoin ports
BITCOIN_INTERNAL_PORT=18444
BITCOIN_EXTERNAL_PORT=${BITCOIN_INTERNAL_PORT}

# git version
SERVER_DOCKER_BITCOIN_VERSION=
#v27.0

# network
DOCKER_NETWORK_BASE_IP="172.18.0."
DOCKER_NETWORK_BASE_HOST="0"
DOCKER_NETWORK_START_HOST="100"
DOCKER_NETWORK_SUBSET_IP="${DOCKER_NETWORK_BASE_IP}${DOCKER_NETWORK_BASE_HOST}"
DOCKER_NETWORK_START_IP="${DOCKER_NETWORK_BASE_IP}${DOCKER_NETWORK_START_HOST}"
DOCKER_NETWORK_SUBSET_RANGE="16"
DOCKER_NETWORK_SUBSET="${DOCKER_NETWORK_SUBSET_IP}/${DOCKER_NETWORK_SUBSET_RANGE}"
DOCKER_NETWORK_NAME="blocknet"
